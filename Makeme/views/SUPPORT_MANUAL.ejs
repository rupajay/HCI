    <!-- Chatbot Section -->
    <section class="chatbot-section">
        <h2>Need Help? Ask</h2>
        <div id="chatbot-container">
            <div id="chatbot-messages" style="border: 1px solid #ccc; padding: 10px; height: 200px; overflow-y: auto; background-color: #f9f9f9; color: #000;"></div>
            <input type="text" id="chatbot-input" placeholder="Type your question here..." style="color: #000;" />
            <button id="chatbot-send">Send</button>
        </div>
    </section>

    <script>
        const predefinedAnswers = {
            "how do i register?": "To register, click on the 'Sign Up' button on the homepage.",
            "how do i purchase items?": "To purchase an item, go to your cart and click 'Purchase'.",
            "how do i add items to wishlist?": "Navigate to the item you want and click 'Add to Wishlist'.",
            "how do i contact support?": "You can contact support via email at support@highrollerhub.com or call 1-800-700-900.",
        };

        async function sendMessage() {
            let userInput = document.getElementById("chatbot-input").value.trim();
            let chatMessages = document.getElementById("chatbot-messages");

            if (userInput !== "") {
                // Display user message
                let userMessage = `<p><strong>You:</strong> ${userInput}</p>`;
                chatMessages.innerHTML += userMessage;
                chatMessages.scrollTop = chatMessages.scrollHeight; // Auto-scroll to the latest message
                document.getElementById("chatbot-input").value = "";

                // Simulate a delay for bot response
                setTimeout(() => {
                    let botMessage;
                    if (predefinedAnswers[userInput.toLowerCase()]) {
                        botMessage = `<p><strong>Bot:</strong> ${predefinedAnswers[userInput.toLowerCase()]}</p>`;
                    } else {
                        botMessage = `<p><strong>Bot:</strong> Sorry, I don't have an answer for that. Please contact support.</p>`;
                    }
                    chatMessages.innerHTML += botMessage;
                    chatMessages.scrollTop = chatMessages.scrollHeight; // Auto-scroll to the latest message
                }, 500); // Simulated delay of 500ms
            }
        }

        // Add event listener for the send button
        document.getElementById("chatbot-send").addEventListener("click", sendMessage);

        // Allow pressing Enter to send a message
        document.getElementById("chatbot-input").addEventListener("keypress", function (event) {
            if (event.key === "Enter") {
                sendMessage();
            }
        });
    </script>

